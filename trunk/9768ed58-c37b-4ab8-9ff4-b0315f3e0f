$(":file").change(function(){
var file = this.files[0];
var size = file.size;
var type = file.type;

		var FR= new FileReader();
		FR.onload = function(e) {
			$("#logotipo").val(e.target.result);
		};       
			if(size<1024000){
			if((type=="image/png")||(type=="image/jpg")||(type=="image/jpeg")||(type=="image/gif")){
			FR.readAsDataURL( file );
			}else{
			alert("Los archivos s贸lo pueden ser gif, jpg 贸 png, seleccione de nuevo.");
			$(":file").val(null);
			}
		}else{
			alert("El archivo no debe ser mayor a 1 MB, seleccione de nuevo.");
			$(":file").val(null);
		}
});
var d = new Date();
var n = d.getFullYear(); 
$("#fecha").text("漏 "+n);
